<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardMaxElevation="@dimen/card_max_elevation"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_checkout_imageview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/shopping_item_description"
            android:padding="@dimen/image_padding" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:elevation="@dimen/cardview_default_elevation"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_padding">

            <TextView
                android:id="@+id/text_checkout_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_end"
                android:text="Sample"
                android:textSize="@dimen/shopping_item_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_checkout_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginEnd="@dimen/margin_end"
                android:text="price"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_checkout_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:padding="@dimen/margin_padding"
            android:text="@string/default_count"
            android:textSize="@dimen/count_text_size" />
    </LinearLayout>
</androidx.cardview.widget.CardView>